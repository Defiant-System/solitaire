<CaptionToolBar>
	<Group width="17%">
		<Options>
			<Tool symbol="icon-undo" state="disabled" click="history-go-prev" title="Undo."/>
			<Tool symbol="icon-redo" state="disabled" click="history-go-next" title="Redo."/>
		</Options>
		<Tool symbol="icon-automatic" state="disabled" click="auto-complete" title="Autocomplete."/>
	</Group>
	<Group>
		<Options>
			<Tool name="Solitaire" click="set-game-engine" arg="solitaire" state="active"/>
			<Tool name="Freecell" click="set-game-engine" arg="freecell"/>
			<Tool name="Spider" click="set-game-engine" arg="spider"/>
			<Tool name="Yukon" click="set-game-engine" arg="yukon"/>
		</Options>
	</Group>
	<Group width="25%">
		<Tool symbol="icon-cog" menu="game-board"/>
	</Group>
</CaptionToolBar>